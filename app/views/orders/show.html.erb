<% if user_signed_in? %>
  <div class="container">
    <h3 style="color: green;"> All Your current orders. </h3>
    <div class="two-column no-gutters">
      <div class="row no-gutters">
        <div class="left-column col-7 col-lg-8">
          <div class="row">
            <div class="col-lg-12 ordr-detail" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <% @totl_crt = 0 %>
            <% @total_bill = 0 %>
            <% @total_quantity = 0 %>
            <% @orderdetails.each do |orderdetail| %>
            <% product = Product.find_by(id: orderdetail.product_id)%>
            <div class="row" style="background-color: white;">
              <div class="col-lg-2 d-flex align-items-center">
                <% if product.avatars[0].nil? %>
                    <p>Image not available</p>
                <% else %>
                    <%= image_tag product.avatars[0].url, size: '80x100' %>
                <% end %>
              </div>
              <div class="col-lg-6" id="pro-des">
                <h3><%= product.name %></h3><br>
                <h6 style="color:orangered;">Price: $<%= product.price %>.00 only</h6><br>
                <h6>Quantity: <span class="cart_qty" data-id = "<%=product.id%>" > <%= orderdetail.quantity %></span></h6>
                <% @total_quantity +=  orderdetail.quantity %>
                <p><% @total_bill += product.price * orderdetail.quantity %></p> 
                <h6>Total Bill: <span class="total_bill" data-id = "<%=product.id%>"><%= product.price * orderdetail.quantity %></span></h6>
              </div>
              <div class="col-lg-4 d-flex align-items-center">
                <button type="button" class="btn btn-info">Update Qty</button>
              </div>
            </div><hr>
            <%  @totl_crt += 1%>
            <% end -%>
            </div>

          </div><br>
          <div class="row">
            <div class="col-lg-12" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
              <%= form_for :shipping, html: {class: "add-form"} do |f| %>

                  <div class="field">
                    <%= f.label :country, class: "form-label"%>
                    <%= f.select :country, ["Pakistan", "China", "America", "Russia", "UK"], class: "form-select form-select-lg mb-3" %>
                  </div>
                  <div class="field">
                    <%= f.label :first_Name, class: "form-label" %>
                    <%= f.text_field :first_name, required: true, class: "form-control"%>
                  </div>

                  <div class="field">
                    <%= f.label :last_Name, class: "form-label" %>
                    <%= f.text_field :last_name, required: true, class: "form-control" %>
                  </div>

                  <div class="field">
                    <%= f.label :Street_Address1, class: "form-label" %>
                    <%= f.text_field :Street_Address1, required: true, class: "form-control" %>
                  </div>

                  <div class="field">
                    <%= f.label :Street_Address2, class: "form-label" %>
                    <%= f.text_field :Street_Address2, required: true, class: "form-control" %>
                  </div>

                  <div class="field">
                    <%= f.label :city, class: "form-label" %>
                    <%= f.text_field :city, required: true, class: "form-control" %>
                  </div>

                  <div class="field">
                    <%= f.label :province, class: "form-label" %>
                    <%= f.select :province, ["Punjab", "KPK", "Baluchistan", "Sindh", "Gilgit Baltistan"], class: "form-select" %>
                  </div>

                  <div class="field">
                    <%= f.label :code, class: "form-label" %>
                    <%= f.select :code, ["PK +92", "China +86", "USA +1", "RSS +7", "UK +2"], class: "form-select" %>
                  </div>

                  <div class="field">
                    <%= f.label :phone, class: "form-label" %>
                    <%= f.text_field :phone, required: true, class: "form-control" %>
                  </div>

              <%end%>
            </div>
          </div> <br>
        </div>

        <div class="right-column col-5 col-lg-4" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"><br>
          <h5> Total order Items: &nbsp; &nbsp; <span style="color: orangered;"><%= @order.item %></span></h5>

          <h5> Shipping Fee: &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;  <span style="color: orangered;">US $10.00</span> </h5>

          <h4 style="font-weight: bold;">Total Bill: &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; <span style="color: orangered;">US $<%=  @order.bill%>.00</span> </h4>
          <br>
          <%= form_tag checkout_create_path, method: 'post', remote: true do %>
            <div class="field">
              <%= hidden_field_tag :cheeck, @order.id %>
            </div>
            <div class="actions">
              <%= submit_tag "Pay Now", style: 'color:white;', class: "btn btn-info" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% else %>
  <% user_session_path %>
<% end -%>


